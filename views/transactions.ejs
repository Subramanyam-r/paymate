<%-include('header.ejs')-%>

<div class="cust-main table-responsive-sm">
    <h1><p>Transaction History</p></h1>
    <table class="table table-striped table-xl">
        <thead>
          <tr class="cust-row">
            <th>Transaction ID</th>
            <th>From</th>
            <th>To</th>
            <th>Amount</th>
            <th>Timestamp</th>
          </tr>
        </thead>
        <tbody>

            <% for(let i=transactions.length-1; i>=0;i--) { %>
                <tr>
                <td class="cust-item"><%=transactions[i]._id%></td>
                <td class="cust-item"><%=transactions[i].from%></td>
                <td class="cust-item"><%=transactions[i].to%></td>
                <td class="cust-item">$<%=transactions[i].amount%></td>
                <td class="cust-item"><%=transactions[i].moment%></td>
          </tr>
            <% } %>

        </tbody>
      </table>
</div>

  <%-include('footer.ejs')-%>