
<%-include('header.ejs')-%>

<div class="cust-profile">

            <div class="card text-white bg-primary mb-3 transfer-card">
                <div class="card-header">PayMate Wallet</div>
                <div class="card-body">
                  <h2 class="card-title"><%=customerDetails.name%></h2>
                    <div class="row">
                        <div class="col-6 left-align">
                            <span class="card-text">Balance</span>
                            <h4>$<%=customerDetails.balance%></h4>
                        </div>
                        <div class="col-6 right-align">
                            <span class="card-text">Account No.</span>
                            <h4><%=customerDetails._id%></h4>
                        </div>
                    </div>
                </div>
                <form action="/transfer" method="post">
                    <div class="cust-pay-btn-div">
                        <button name="customerName" type="submit" value="<%=customerDetails.name%>" class="btn btn-outline-light cust-pay-btn">Transfer</button>
                    </div>
                </form>
            </div>

    </div>


<%-include('footer.ejs')-%>
